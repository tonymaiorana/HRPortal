@model HRPortal.Models.Category

@{
    ViewBag.Title = "EditCategory";
}

<h2>Edit Category</h2>
<p>
    <span style="font-weight: bold"> Your prevous Category Name was </span>@Model.CategoryTitle
</p>
@using (Html.BeginForm())
{
    
    <input type="hidden" ID ="CategoryID" value="@Model.CategoryID"/>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-lg-12" for="CategoryTitle">Category Name</label>
            <div class="col-lg-12">
                <input id="CategoryTitle" name="CategoryTitle" type="text" placeholder="New Category Name" class="form-control input-lg" required="" />
            </div>
        </div>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-lg-12 col-lg-offset-0">
                <input type="submit" value="Save" />

                @Html.ActionLink("Cancel", "Index")
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
