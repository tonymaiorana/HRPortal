                @Html.ValidationMessageFor(m => m.newResume.Applicant.Birthday)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.newResume.Education, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.newResume.Education, Model.Education, new { HtmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.newResume.Education)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.newResume.ApplyingPosition.PositionID, new { @class = "control-label" })
