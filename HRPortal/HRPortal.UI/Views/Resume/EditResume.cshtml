                        @Html.LabelFor(m => m.newResume.JobExperience[i].Address.Street, new { @class = "control-label" })
                        @Html.EditorFor(m => m.newResume.JobExperience[i].Address.Street, new { HtmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.newResume.JobExperience[i].Address.Street)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.newResume.JobExperience[i].Address.City, new { @class = "control-label" })
                        @Html.EditorFor(m => m.newResume.JobExperience[i].Address.City, new { HtmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.newResume.JobExperience[i].Address.City)
