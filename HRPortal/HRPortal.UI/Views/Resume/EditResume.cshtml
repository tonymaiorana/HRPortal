                @Html.ValidationMessageFor(m => m.newResume.ApplyingPosition)
            </div>
            @for (int i = 0; i < Model.newResume.JobExperience.Count; i++)
                {
                <div class="form-group">
                    @Html.LabelFor(m => m.newResume.JobExperience[i].Company, new { @class = "control-label" })
                    @Html.EditorFor(m => m.newResume.JobExperience[i].Company, new { HtmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.newResume.JobExperience[i].Company)
                </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.newResume.JobExperience[i].StartDate, new { @class = "control-label" })
