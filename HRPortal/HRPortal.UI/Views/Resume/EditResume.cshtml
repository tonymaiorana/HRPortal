                        @Html.ValidationMessageFor(m => m.newResume.JobExperience[i].Address.ZipCode)
                    </div>
                    <button name="MoreJobExperience">More Job Experience</button>
            }
        </fieldset>
        <div class="col-lg-8 text-center">
            <button class="btn-group">Submit</button>
        </div>
    </div>
}

